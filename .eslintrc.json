{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "indent": [
            1,
            "tab"
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "semi": [
            "error",
            "never"
        ],
        "no-empty-function": [
            "error",
            {
                "allow": [
                    "functions",
                    "arrowFunctions"
                ]
            }
        ],
        "@typescript/no-empty-function": "off",
        "@typescript-eslint/no-explicit-any": "off"
    }
}